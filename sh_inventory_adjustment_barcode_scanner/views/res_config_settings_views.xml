<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_inven_adjt_barcode_scanner_res_config_settings_form" model="ir.ui.view">
        <field name="name">sh.inven.adjt.barcode.scanner.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='stock']" position="inside">

                    <h2>Stock Adjustment Barcode Scanner</h2>
                    <div class="row mt16 o_settings_container">
                        
                        <div  class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="sh_inven_adjt_barcode_scanner_type"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="sh_inven_adjt_barcode_scanner_type" class="o_light_label" widget="radio"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                                                

                    </div>
                    
               </xpath>
        </field>
    </record>


</odoo>
